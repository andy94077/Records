#export PS1="\[\033[38;5;32m\]\u\[\033[38;5;251m\]@\[\033[38;5;35m\]\h\[\033[38;5;251m\]: \[\033[38;5;184m\]\W\[\033[38;5;214m\]\$(parse_git_branch)\[\033[38;5;251m\]$ \[\033[0m\]"
